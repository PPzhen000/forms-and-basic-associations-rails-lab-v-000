<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label 'Song Title:' %>
  <%= f.text_field :title %>
  <br />
  <%= f.label 'Artist Name:' %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label 'Choose a Genre:' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br> 
  <input name="category[post_ids][]">
  <%= f.submit %>
<% end %>
